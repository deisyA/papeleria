            <h1>PRODUCTOS</h1>
            <div class="row">
                <div class="col-md-6 mt-6 text-center">
                    <table class="table table-striped table-dark table-hover">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Referencia</th>
                            <th>Marca</th>
                            <th>Color</th>
                            <th>Presentación</th>
                            <th>Peso</th>
                            <th>Tipo</th>
                            <th>Tamaño</th>
                            <th>Existencias</th>
                            <th>Ver</th>
                            <th>Borrar</th>
                            <th>Editar</th>
                        </tr>

                        
                        <% for (let i=0; i < product.length; i++) { %>
                            <tr>
                                <% if (product[i].activo_producto == 1){ %>
                                <td><%= product[i].id_producto %></td>
                                <td><%= product[i].nombre_producto %></td>
                                <td><%= product[i].referencia_producto %></td>
                                <td><%= product[i].marca_producto %></td>
                                <td><%= product[i].color_producto %></td>
                                <td><%= product[i].presentacion %></td>
                                <td><%= product[i].peso %></td>
                                <td><%= product[i].tipo_medida %></td>
                                <td><%= product[i].tamaño %></td>
                                <td><% let total_ee = 0 %>
                                    <% for (let j=0; j < in_product.length;j++) { %>
                                        <% if (product[i].id_producto === in_product[j].id_producto){ %>                                            
                                            <% total_ee = total_ee + in_product[j].cantidad_entrada %>  
                                        <% } %>                                        
                                    <% } %>  <%= total_ee %>
                                </td>                                
                                <td><% let total_e = 0 %>
                                    <% for (let j=0; j < in_product.length;j++) { %>

                                        <% if (product[i].id_producto === in_product[j].id_producto){ %>  

                                            <% total_e = total_e + in_product[j].cantidad_entrada %>  
                                            <% let lotes=[]; %>
                                            <% lotes.push(in_product[j].cantidad_entrada)  %>
                                            
                                            <%= lotes %>   
                                        <% } %>                                  
                                    <% } %> 
                                </td>
                                <td> 
                                    <a href="/prod/<%= product[i].id_producto %>">Borrar</a>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-outline-warning btn-sm" data-toggle="modal" data-target="#exampleModal" data-whatever="@fat">Editar</button>
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                      <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                              <span aria-hidden="true">&times;</span>
                                            </button>
                                          </div>
                                          <div class="modal-body">
                                            <form>
                                              <div class="form-group">
                                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                                <input type="text" class="form-control" id="recipient-name">
                                              </div>
                                              <div class="form-group">
                                                <label for="message-text" class="col-form-label">Message:</label>
                                                <textarea class="form-control" id="message-text"></textarea>
                                              </div>
                                            </form>
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Send message</button>
                                          </div>
                                        </div>
                                      </div>
                                    </div> 
                                </td>
                                <td> 
                                    <a href="/product/<%= product[i].id_producto %>">Ver</a>
                                </td>
                            </tr>

                                <% } %> 
                        <% } %>              
                            

                        
                    </table>
