<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>form-register</title>
    <link rel="stylesheet" href="resources/css/style.css">
</head>
<body> 
    <div class="login-box register">
        <img class="logoP" src="resources/img/P.png"  alt="Logo de P">
        <h1>REGISTRAR NUEVO USUARIO</h1>
        <form action="/register" method="POST">
            <!--typeUser-->    
            <div class="typeUser">
                <label for="rol">Tipo de usuario</label>
                <select name="rol" id="rol" class="select-css">                        
                    <option value="1">Administradora</option>
                    <option value="2">Empleada</option>
                    <option value="3" selected>Visitante</option>
                </select>
            </div>
            <!--name-->
            <label for="user">Nombre</label>
            <input  type="text" name="user" placeholder="Nombre de usuario">
            <!--email-->
            <label for="email">Correo</label>
            <input type="text" name="email" placeholder="Correo electrónico">
            <!--pass-->
            <label for="password">Contraseña</label>
            <input type="password" name="password" placeholder="Ingresar contraseña">
            <label for="passwordTwo">Confirmar contraseña</label>
            <input type="password" name="passwordTwo" placeholder="Ingresar contraseña">           
            <!--buttom-->            
            <input type="submit" value="Guardar datos de usuario"/>
            
            <a href="/">Cancelar</a>
            
        </form>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({                
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer: '<%= timer %>'
            }).then(()=>{
                window.location= '/<%= ruta %>'
            })
        </script>
    <% } %> 
    
</body>
</html>